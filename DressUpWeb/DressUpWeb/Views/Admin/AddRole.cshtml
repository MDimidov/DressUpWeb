@model AddRoleViewModel

@{
    ViewData["Title"] = "Add Role";
}
<div class="container">
    <div class="row">
        <h2 class="text-center">Добави Роля</h2>
        <div class="col-md-12">
            <form asp-controller="Admin" asp-action="AddRole" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label">Име на роля</label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">
                    Add Role
                </button>
            </form>
        </div>
        <div class="col-md-12 roles-container">
            <h2>Съществуващи роли</h2>
            <div class="row roles-ul">
                <ul class="no-bullets role-item ">
                    @foreach (var role in Model.Roles)
                    {
                        <li class="role">@role.RoleName</li>
                    }
                </ul>
            </div>
        </div>

    </div>
</div>
