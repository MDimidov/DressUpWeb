@model AddUserToRoleViewModel

<h2 class="text-center">Добави роля на потребител</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="UserEmail" class="control-label"> Емайл на потребителя</label>
        <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleName" class="control-label">Роля на потребителя</label>
        <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(Model.Roles, "RoleName", "RoleName"))">
            <option value="">Изберете роля</option>
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добави към роля</button>
</form>
