@model ProductPreDeleteDetails

@{
	ViewBag.Title = "Delete Product";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="post" asp-action="Delete">
	<div class="row">
		<div class="col-md-4">
			@if (Model.Images.Any())
			{
				<img class="card-img-top" src="@Url.Content(Model.Images.First().ImageUrl)" alt="@Model.Name Image">
			}
			else
			{
				<img class="card-img-top" src="~/DressPics/ImageCommingSoon.jpg" alt="Coming Soon Image">
			}
		</div>
		<div class="col-md-8">
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" disabled="disabled" />
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" disabled="disabled" />
			</div>
			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" class="form-control" disabled="disabled" />
			</div>
			<div class="form-group">
				<label asp-for="Quantity" class="control-label"></label>
				<input asp-for="Quantity" class="form-control" disabled="disabled" />
			</div>
			<div class="form-group mt-2">
				<input type="submit" value="Delete" class="btn btn-danger" />
			</div>
		</div>
	</div>
</form>
