@{
    ViewData["Title"] = "Test";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-5">
        <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="AddImage">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload file</p>
                    <input class="form-control" name="files" multiple="multiple" type="file" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input class="btn btn-success" type="submit" value="Upload" />
                    <p class="text-danger">@ViewData["ErrorMessage"]</p>
                </div>
            </div>
        </form>

    </div>
</div> 