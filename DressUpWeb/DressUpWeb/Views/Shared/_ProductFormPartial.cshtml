@model ProductFormModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" placeholder="Title...">
				<span asp-validation-for="Name" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="4" class="form-control" placeholder="Very confortable summer dress..."></textarea>
				<span asp-validation-for="Description" class="small text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="BrandId"></label>
				<select asp-for="BrandId" class="form-control">
					@foreach (var brand in Model.Brands)
					{
						<option value="@brand.Id">@brand.Name</option>
					}
				</select>
				<span asp-validation-for="BrandId" class="small text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="CategoryId"></label>
				<select asp-for="CategoryId" class="form-control">
					@foreach (var category in Model.Categories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
				<span asp-validation-for="CategoryId" class="small text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="SizeType"></label>
				<select asp-for="SizeType" class="form-control">
					@foreach (var sizeType in Model.SizeTypes)
					{
						<option value="@sizeType">@sizeType</option>
					}
				</select>
				<span asp-validation-for="SizeType" class="small text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Price"></label>
				<input asp-for="Price" class="form-control">
				<span asp-validation-for="Price" class="small text-danger"></span>
			</div>


			<div class="form-group">
				<label asp-for="Quantity"></label>
				<input asp-for="Quantity" class="form-control">
				<span asp-validation-for="Quantity" class="small text-danger"></span>
			</div>


			@* <div class="form-group">
			<label asp-for="ImageUrl"></label>
			<input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
			<span asp-validation-for="ImageUrl" class="small text-danger"></span>
			</div> *@

			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>

