@using DressUp.Web.Infrastructure;
@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "All Users";
    string roles = string.Empty;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th><label>Id</label></th>
            <th><label>Email</label></th>
            <th><label>Full Name</label></th>
            <th><label>Roles</label></th>
            <th><label>User Is Online</label></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><label>@user.Id</label></td>
                <td><label>@user.Email</label></td>
                <td><label>@user.FullName</label></td>
                <td><label>@string.Join(", ",user.Roles)</label></td>
                <td>
                    @if (user.Email != null)
                    {
                        <label>✔</label>
                    }
                    else
                    {
                        <label class="text-center">❌</label>
                    }
                </td>
                @* <td>
                    @if (OnlineUsersMiddleware.CheckIfUserIsOnline(user.Id))
                    {
                        <label>✔</label>
                    }
                    else
                    {
                        <label class="text-center">❌</label>
                    }
                </td> *@
            </tr>
        }
    </tbody>
</table>